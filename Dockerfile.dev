# Development container for endive with Claude Code
# Supports --dangerously-skip-permissions for autonomous development

FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    ca-certificates \
    gnupg \
    libicu-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude Code CLI)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Install Beads issue tracker
# The install script downloads a binary linked against ICU 74; create compat symlinks for ICU 76
RUN curl -fsSL https://raw.githubusercontent.com/steveyegge/beads/main/scripts/install.sh | bash \
    && for lib in libicui18n libicuuc libicudata; do \
         ln -sf /usr/lib/x86_64-linux-gnu/${lib}.so.76 /usr/lib/x86_64-linux-gnu/${lib}.so.74; \
       done

# Copy entrypoint script (runs as root, before USER switch)
COPY scripts/docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Create non-root user matching the host user so that absolute paths
# (e.g. in Claude Code plugin JSON files) resolve identically inside
# and outside the container. Only used locally, never published.
ARG USER_UID=1000
ARG USER_GID=1000
ARG USER_NAME=dev
ARG USER_HOME=/home/dev
RUN groupadd --gid ${USER_GID} ${USER_NAME} \
    && useradd --uid ${USER_UID} --gid ${USER_GID} -m -d ${USER_HOME} ${USER_NAME} \
    && mkdir -p ${USER_HOME}/.claude /app \
    && chown -R ${USER_NAME}:${USER_NAME} ${USER_HOME} /app

# Set working directory
WORKDIR /app

# Switch to non-root user
USER ${USER_NAME}

# Configure git to trust the mounted directory
RUN git config --global --add safe.directory /app

# Use the project's venv (bind-mounted from host)
ENV VIRTUAL_ENV=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"

ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["bash"]
